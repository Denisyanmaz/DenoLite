@page
@model DenoLite.Web.Pages.ForgotPasswordModel

<h2 class="text-center">Forgot Password</h2>

@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
}
@if (!string.IsNullOrWhiteSpace(Model.Success))
{
    <div class="alert alert-success">@Model.Success</div>
}

<div class="auth-form">
    @if (!Model.CodeSent)
    {
        <p class="text-muted mb-4">Enter your email address and we'll send you a code to reset your password.</p>
        
        <form method="post">
            <div class="mb-3">
                <label asp-for="Input.Email">Email</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" style="color:red"></span>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary rounded-pill px-4 py-2">Send Reset Code</button>
            </div>
            
            <p class="text-center mt-3 mb-0">
                <a asp-page="/Login">Back to Login</a>
            </p>
        </form>
    }
    else
    {
        <p class="text-muted mb-4">A 6-digit code has been sent to <strong>@Model.Input.Email</strong>. Please check your email and enter the code below.</p>
        
        <form method="post" asp-page-handler="Reset">
            <input type="hidden" asp-for="Input.Email" />
            
            <div class="mb-3">
                <label asp-for="ResetInput.Code">Verification Code</label>
                <input asp-for="ResetInput.Code" class="form-control" placeholder="123456" maxlength="6" />
                <span asp-validation-for="ResetInput.Code" style="color:red"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ResetInput.NewPassword">New Password</label>
                <input asp-for="ResetInput.NewPassword" class="form-control" type="password" />
                <span asp-validation-for="ResetInput.NewPassword" style="color:red"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ResetInput.ConfirmPassword">Confirm New Password</label>
                <input asp-for="ResetInput.ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="ResetInput.ConfirmPassword" style="color:red"></span>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary rounded-pill px-4 py-2">Reset Password</button>
            </div>
            
            <p class="text-center mt-3 mb-0">
                <a asp-page="/ForgotPassword">Request a new code</a>
            </p>
        </form>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
