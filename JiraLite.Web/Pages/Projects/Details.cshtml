@page "{id:guid}"
@model JiraLite.Web.Pages.Projects.DetailsModel

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <div class="text-muted small">
            <a href="/Projects">Projects</a> / Details
        </div>
        <h2 class="mb-0">@Model.ProjectName</h2>
        @if (!string.IsNullOrWhiteSpace(Model.ProjectDescription))
        {
            <div class="text-muted">@Model.ProjectDescription</div>
        }
    </div>

    <div>
        <a class="btn btn-outline-secondary btn-sm" href="/Projects">Back</a>
        <a class="btn btn-outline-danger btn-sm" href="/Logout">Logout</a>
    </div>
</div>

@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger" style="white-space:pre-wrap;">@Model.Error</div>
}
else
{
    <!-- Tabs -->
    <ul class="nav nav-tabs mb-3">
        <li class="nav-item">
            <a class="nav-link @(Model.Tab == "board" ? "active" : "")" href="@Model.TabLink("board")">Board</a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(Model.Tab == "activity" ? "active" : "")" href="@Model.TabLink("activity")">Activity</a>
        </li>
        <li class="nav-item">
            <a class="nav-link disabled">Members (next)</a>
        </li>
    </ul>

    @* ===================== BOARD TAB ===================== *@
    @if (Model.Tab == "board")
    {
        <!-- Filters -->
        <div class="card mb-3">
            <div class="card-body">
                <form method="get" class="row g-2 align-items-end">
                    <input type="hidden" name="tab" value="board" />

                    <div class="col-md-2">
                        <label class="form-label">Status</label>
                        <select class="form-select" name="status">
                            <option value="">All</option>
                            <option value="Todo" selected="@(Model.Status?.ToString() == "Todo")">Todo</option>
                            <option value="InProgress" selected="@(Model.Status?.ToString() == "InProgress")">InProgress</option>
                            <option value="Done" selected="@(Model.Status?.ToString() == "Done")">Done</option>
                        </select>
                    </div>

                    <div class="col-md-2">
                        <label class="form-label">Priority</label>
                        <select class="form-select" name="priority">
                            <option value="">All</option>
                            @for (int p = 1; p <= 5; p++)
                            {
                                var label = p switch
                                {
                                    1 => "1 (High)",
                                    2 => "2 (Med-High)",
                                    3 => "3 (Medium)",
                                    4 => "4 (Med-Low)",
                                    5 => "5 (Low)",
                                    _ => p.ToString()
                                };

                                <option value="@p" selected="@(Model.Priority == p)">@label</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">AssigneeId</label>
                        <input class="form-control" name="assigneeId" value="@(Model.AssigneeId?.ToString() ?? "")" />
                    </div>

                    <div class="col-md-2">
                        <label class="form-label">Due From</label>
                        <input class="form-control" type="date" name="dueFrom" value="@(Model.DueFrom?.ToString("yyyy-MM-dd") ?? "")" />
                    </div>

                    <div class="col-md-2">
                        <label class="form-label">Due To</label>
                        <input class="form-control" type="date" name="dueTo" value="@(Model.DueTo?.ToString("yyyy-MM-dd") ?? "")" />
                    </div>

                    <div class="col-md-1">
                        <label class="form-label">Size</label>
                        <select class="form-select" name="pageSize">
                            @foreach (var size in new[] { 10, 15, 20, 50 })
                            {
                                <option value="@size" selected="@(Model.PageSize == size)">@size</option>
                            }
                        </select>
                    </div>

                    <div class="col-12 d-flex gap-2 mt-2">
                        <button class="btn btn-primary" type="submit">Apply</button>
                        <a class="btn btn-outline-secondary" href="/Projects/Details/@Model.ProjectId?tab=board">Reset</a>
                    </div>
                </form>
            </div>
        </div>
        <!-- Create Task (Accordion) -->
        <div class="accordion mb-3" id="createTaskAccordion">
            <div class="accordion-item">

                <h2 class="accordion-header" id="createTaskHeading">
                    <button class="accordion-button collapsed"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#createTaskCollapse"
                            aria-expanded="false"
                            aria-controls="createTaskCollapse">
                        <strong>Create Task</strong>
                        <span class="ms-2 text-muted small">(click to expand)</span>
                    </button>
                </h2>

                <div id="createTaskCollapse"
                     class="accordion-collapse collapse"
                     aria-labelledby="createTaskHeading"
                     data-bs-parent="#createTaskAccordion">

                    <div class="accordion-body">

                        @if (!string.IsNullOrWhiteSpace(Model.CreateError))
                        {
                            <div class="alert alert-danger" style="white-space:pre-wrap;">
                                @Model.CreateError
                            </div>
                        }

                        <form method="post" asp-page-handler="CreateTask" class="row g-2">
                            <input type="hidden" name="tab" value="board" />

                            <div class="col-md-6">
                                <label class="form-label">Title</label>
                                <input class="form-control" asp-for="CreateTaskInput.Title" />
                                <span class="text-danger" asp-validation-for="CreateTaskInput.Title"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">AssigneeId</label>
                                <input class="form-control" asp-for="CreateTaskInput.AssigneeId" />
                                <span class="text-danger" asp-validation-for="CreateTaskInput.AssigneeId"></span>
                            </div>

                            <div class="col-12">
                                <label class="form-label">Description</label>
                                <textarea class="form-control" asp-for="CreateTaskInput.Description"></textarea>
                            </div>

                            <div class="col-md-3">
                                <label class="form-label">Status</label>
                                <select class="form-select" asp-for="CreateTaskInput.Status">
                                    <option value="Todo">Todo</option>
                                    <option value="InProgress">InProgress</option>
                                    <option value="Done">Done</option>
                                </select>
                            </div>

                            <div class="col-md-3">
                                <label class="form-label">Priority</label>
                                <select class="form-select" asp-for="CreateTaskInput.Priority">
                                    @for (var p = 1; p <= 5; p++)
                                    {
                                        <option value="@p">@p</option>
                                    }
                                </select>
                            </div>

                            <div class="col-md-3">
                                <label class="form-label">Due Date</label>
                                <input class="form-control" type="date" asp-for="CreateTaskInput.DueDate" />
                            </div>

                            <div class="col-md-3 d-flex align-items-end">
                                <button class="btn btn-success w-100" type="submit">
                                    Create
                                </button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>


        <!-- Board -->
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <strong>Board</strong>
                <span>Total: @Model.TotalCount</span>
            </div>

            <div class="card-body">
                <div id="boardToast" class="alert alert-danger d-none"></div>

                <div class="row g-3">
                    @Model.RenderColumn("Todo", Model.TodoTasks)
                    @Model.RenderColumn("InProgress", Model.InProgressTasks)
                    @Model.RenderColumn("Done", Model.DoneTasks)
                </div>
            </div>

            <!-- Paging (board only) -->
            <div class="card-footer d-flex justify-content-between align-items-center">
                <div class="text-muted small">
                    Page @Model.Page of @Model.TotalPages
                </div>

                <div class="d-flex gap-2">
                    @if (Model.Page > 1)
                    {
                        <a class="btn btn-outline-secondary btn-sm" href="@Model.BoardPageLink(Model.Page - 1)">Prev</a>
                    }
                    @if (Model.Page < Model.TotalPages)
                    {
                        <a class="btn btn-outline-secondary btn-sm" href="@Model.BoardPageLink(Model.Page + 1)">Next</a>
                    }
                </div>
            </div>
        </div>
    }

    @* ===================== ACTIVITY TAB ===================== *@
    @if (Model.Tab == "activity")
    {
        <div class="card mb-3">
            <div class="card-header"><strong>Project Activity</strong></div>
            <div class="card-body">

                <form method="get" class="row g-2 align-items-end mb-3">
                    <input type="hidden" name="tab" value="activity" />

                    <div class="col-md-3">
                        <label class="form-label">ActionType</label>
                        <input class="form-control" name="actionType" value="@(Model.ActivityActionType ?? "")"
                               placeholder="TaskCreated / TaskStatusChanged / CommentAdded..." />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">ActorId</label>
                        <input class="form-control" name="actorId" value="@(Model.ActivityActorId?.ToString() ?? "")"
                               placeholder="Guid (optional)" />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">TaskId</label>
                        <input class="form-control" name="taskId" value="@(Model.ActivityTaskId?.ToString() ?? "")"
                               placeholder="Guid (optional)" />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Search (q)</label>
                        <input class="form-control" name="q" value="@(Model.ActivityQ ?? "")"
                               placeholder="search message..." />
                    </div>

                    <div class="col-md-2">
                        <label class="form-label">Size</label>
                        <select class="form-select" name="aSize">
                            @foreach (var size in new[] { 20, 50, 100 })
                            {
                                <option value="@size" selected="@(Model.ActivityPageSize == size)">@size</option>
                            }
                        </select>
                    </div>

                    <div class="col-12 d-flex gap-2">
                        <button class="btn btn-primary" type="submit">Apply</button>
                        <a class="btn btn-outline-secondary" href="/Projects/Details/@Model.ProjectId?tab=activity">Reset</a>
                    </div>
                </form>

                @if (Model.ProjectActivity?.Items == null || Model.ProjectActivity.Items.Count == 0)
                {
                    <div class="text-muted">No activity yet.</div>
                }
                else
                {
                    @foreach (var a in Model.ProjectActivity.Items)
                    {
                        <div class="border rounded p-2 mb-2">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <span class="badge bg-secondary">@a.ActionType</span>
                                    <span class="text-muted small">by <code>@a.ActorId</code></span>

                                    @if (a.TaskId.HasValue)
                                    {
                                        <span class="text-muted small">
                                            • task <a href="/Tasks/Details/@a.TaskId.Value?tab=overview"><code>@a.TaskId.Value</code></a>
                                        </span>
                                    }
                                </div>
                                <div class="text-muted small">@a.CreatedAt.ToString("yyyy-MM-dd HH:mm")</div>
                            </div>
                            <div class="mt-2">@a.Message</div>
                        </div>
                    }

                    <div class="d-flex justify-content-between align-items-center mt-3">
                        <div class="text-muted small">
                            Page @Model.ActivityPage
                        </div>
                        <div class="d-flex gap-2">
                            @if (Model.ActivityPage > 1)
                            {
                                <a class="btn btn-outline-secondary btn-sm" href="@Model.ActivityPageLink(Model.ActivityPage - 1)">Prev</a>
                            }
                            @if (Model.ProjectActivity.TotalCount > (Model.ActivityPage * Model.ActivityPageSize))
                            {
                                <a class="btn btn-outline-secondary btn-sm" href="@Model.ActivityPageLink(Model.ActivityPage + 1)">Next</a>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    @* Drag/drop only needed on Board tab *@
    @if (Model.Tab == "board")
    {
        <script>
            (function () {
                const cards = document.querySelectorAll(".task-link");
                const columns = document.querySelectorAll(".board-column");
                const toast = document.getElementById("boardToast");

                let dragTaskId = null;
                let dragFromStatus = null;
                let wasDragging = false;

                function showError(msg) {
                    toast.textContent = msg;
                    toast.classList.remove("d-none");
                    setTimeout(() => toast.classList.add("d-none"), 4000);
                }
                            // Quick status dropdown (no drag needed)
                document.querySelectorAll(".quick-status").forEach(sel => {
                  sel.addEventListener("change", async (e) => {
                    const taskId = sel.dataset.taskId;
                    const targetStatus = sel.value;

                    const resp = await fetch("/Projects/UpdateTaskStatus", {
                      method: "POST",
                      headers: { "Content-Type": "application/json" },
                      body: JSON.stringify({
                        taskId: taskId,
                        status: targetStatus,
                        projectId: "@Model.ProjectId"
                      })
                    });

                    if (!resp.ok) {
                      const text = await resp.text();
                      showError(text || "Status update failed.");
                      return;
                    }

                    // easiest: reload so columns update
                    location.reload();
                  });
                });

                cards.forEach(card => {
                    card.addEventListener("dragstart", e => {
                        wasDragging = true;

                        dragTaskId = card.dataset.taskId;
                        dragFromStatus = card.dataset.status;

                        e.dataTransfer.setData("text/plain", dragTaskId);
                    });

                    card.addEventListener("dragend", () => {
                        setTimeout(() => wasDragging = false, 0);
                    });
                    card.addEventListener("click", e => {
                      if (e.target.closest(".quick-status")) {
                        e.preventDefault();
                        e.stopPropagation();
                        return;
                      }
                      if (wasDragging) e.preventDefault();
                    });
                });

                columns.forEach(col => {
                    col.addEventListener("dragover", e => {
                        e.preventDefault();
                    });

                    col.addEventListener("drop", async e => {
                        e.preventDefault();

                        const targetStatus = col.dataset.dropStatus;
                        const taskId = dragTaskId || e.dataTransfer.getData("text/plain");

                        if (!taskId || dragFromStatus === targetStatus) return;

                        const resp = await fetch("/Projects/UpdateTaskStatus", {
                            method: "POST",
                            headers: { "Content-Type": "application/json" },
                            body: JSON.stringify({
                                taskId: taskId,
                                status: targetStatus,
                                projectId: "@Model.ProjectId"
                            })
                        });

                        if (!resp.ok) {
                            const text = await resp.text();
                            showError(text);
                            return;
                        }

                        location.reload();
                    });
                });
            })();
        </script>
    }
}
